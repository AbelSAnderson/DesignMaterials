<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/elementName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/largeButtonMargin"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:drawablePadding="@dimen/btn_drawable_padding"
        android:padding="@dimen/titlePadding"
        android:text="@string/homeDesignButton"
        android:textColor="@color/ic_launcher_background"
        android:textSize="@dimen/homeTextFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
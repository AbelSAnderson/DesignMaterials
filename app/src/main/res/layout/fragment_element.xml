<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/SingleElementView"
    tools:context=".fragments.ElementFragment">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="500px">
        <ScrollView
            android:id="@+id/elementHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40px"
            android:text="Font Family"
            android:textColor="#000"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/fontSelectContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <Button
                android:id="@+id/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3px"
                android:layout_weight="1"
                android:tag="roboto"
                android:text="Roboto" />

            <Button
                android:id="@+id/opensans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3px"
                android:layout_weight="1"
                android:tag="opensans"
                android:text="Open Sans" />

            <Button
                android:id="@+id/montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3px"
                android:layout_weight="1"
                android:tag="montserrat"
                android:text="Montserrat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <Button
                android:id="@+id/playfairdisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3px"
                android:layout_weight="1"
                android:tag="playfairdisplay"
                android:text="Playfair Display" />

            <Button
                android:id="@+id/grotesque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3px"
                android:layout_weight="1"
                android:tag="grotesque"
                android:text="Darker Grotesque" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingLeft="40px"
            android:text="Font Weight"
            android:textColor="#000"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/fontWeightContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40px">

            <RadioGroup
                android:id="@+id/fontWeightGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="light"
                    android:text="Light" />

                <RadioButton
                    android:id="@+id/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:tag="regular"
                    android:text="Regular" />

                <RadioButton
                    android:id="@+id/bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="bold"
                    android:text="Bold" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Font Size"
                android:textColor="#000"
                android:textSize="25dp" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/fontSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_max="45"
                app:dsb_min="12"
                app:dsb_value="22" />
        </LinearLayout>
        <Button
            android:id="@+id/saveFont"
            android:text="Save"
            android:drawableLeft="@drawable/ic_save_black_24dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
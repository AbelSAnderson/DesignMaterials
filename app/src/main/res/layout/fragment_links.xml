<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.LinksFragment">


    <Button
        android:id="@+id/textButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/buttonMargin"
        android:background="@color/colorPrimary"
        android:padding="@dimen/buttonPadding"
        android:text="@string/textButton"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_background" />

    <Button
        android:id="@+id/phoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/buttonMargin"
        android:background="@color/colorPrimary"
        android:padding="@dimen/buttonPadding"
        android:text="@string/phoneButton"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_background" />

    <Button
        android:id="@+id/emailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/buttonMargin"
        android:background="@color/colorPrimary"
        android:padding="@dimen/buttonPadding"
        android:text="@string/emailButton"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_background" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/buttonMargin"
        android:background="@color/colorPrimary"
        android:padding="@dimen/buttonPadding"
        android:text="@string/mapButton"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_background" />
</LinearLayout>